<div class= "container">
	<div class="gradient">
            <div class="row">
            	<div class="span6 offset3">
                    <div class="content">
                    	<br><br><br><br>
                    	<h1>Fidbacks</h1>
						<%#= image_tag("Fidbacks.png", alt: "fidbacks_logo", size: '350x350')%>
                    	<h2 class="center" ><%= t :slogan %></h2>
                    	<p class="center"> Stay tuned, we will keep you posted !</p>
	                    	<div class="center">
								<%= form_for(@user) do |f| %>
								<%= render 'shared/error_messages'%>
								<%= f.text_field :contact , :placeholder =>"Your email address", :class=>"input-medium search-query"%>
								<%= f.submit "Send", class: "btn btn-info"%>
								<%end%>
								<% flash.each do |key, value| %>
								<div class="alert alert-<%=key%>"><%= value%></div>
								<% end%>
								<br><br><br><br><br><br><br>
							</div>
					</div>
				</div>
			</div>
	</div>
</div>
								


